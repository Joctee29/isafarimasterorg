// Toggle service status (activate/deactivate)
router.patch('/:id/status', authenticateJWT, async (req, res) => {
  try {
    const serviceId = req.params.id;
    const userId = req.user.id;

    console.log('üîÑ [ACTIVATE/DEACTIVATE] Service status toggle request:', {
      serviceId,
      userId,
      userType: req.user.user_type
    });

    if (req.user.user_type !== 'service_provider') {
      console.error('‚ùå User is not a service provider');
      return res.status(403).json({
        success: false,
        message: 'Only service providers can update service status'
      });
    }

    // Verify ownership
    const ownershipResult = await db.query(`
      SELECT s.id, s.is_active, s.title FROM services s
      JOIN service_providers sp ON s.provider_id = sp.id
      WHERE s.id = $1 AND sp.user_id = $2
    `, [serviceId, userId]);

    console.log('üîç Ownership check result:', ownershipResult.rows);

    if (ownershipResult.rows.length === 0) {
      console.error('‚ùå Service not found or user does not have permission');
      return res.status(404).json({
        success: false,
        message: 'Service not found or you do not have permission to update it'
      });
    }

    // Toggle status
    const currentStatus = ownershipResult.rows[0].is_active;
    const newStatus = !currentStatus;
    const serviceTitle = ownershipResult.rows[0].title;

    console.log('üìù Updating status:', {
      serviceTitle,
      currentStatus,
      newStatus
    });

    await db.query(`
      UPDATE services 
      SET is_active = $1, updated_at = CURRENT_TIMESTAMP
      WHERE id = $2
    `, [newStatus, serviceId]);

    console.log(`‚úÖ Service "${serviceTitle}" ${newStatus ? 'activated' : 'deactivated'} successfully`);

    res.json({
      success: true,
      message: `Service ${newStatus ? 'activated' : 'deactivated'} successfully`,
      isActive: newStatus
    });
  } catch (error) {
    console.error('Toggle service status error:', error);
    res.status(500).json({
      success: false,
      message: 'Server error while updating service status'
    });
  }
});

