# Cache Control Headers for Netlify

# HTML files - Never cache, always get fresh version
/*.html
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0

# Version manifest - Never cache
/version.json
  Cache-Control: no-cache, no-store, must-revalidate
  Pragma: no-cache
  Expires: 0
  Access-Control-Allow-Origin: *

# Hashed assets - Cache forever (they have unique names)
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# JavaScript and CSS with hashes - Cache forever
/*.js
  Cache-Control: public, max-age=31536000, immutable

/*.css
  Cache-Control: public, max-age=31536000, immutable

# Manifest - Short cache
/manifest.json
  Cache-Control: no-cache, must-revalidate

# Favicon - Cache for 1 day
/favicon.ico
  Cache-Control: public, max-age=86400

# Security headers for all files
/*
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin